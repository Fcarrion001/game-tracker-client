<h3 class="game-name">{{game.name}}</h3>
<h4>Summary</h4>
{{#if game.summary}}
      <p>{{game.summary}}</p>
    {{else}}
      <p>No summary provided.</p>
    {{/if}}
<h4>Storyline</h4>
{{#if game.storyline}}
      <p>{{game.storyline}}</p>
    {{else}}
      <p>No storyline provided.</p>
    {{/if}}
<img src="https://images.igdb.com/igdb/image/upload/t_cover_big/{{game.cover.cloudinary_id}}.jpg" alt="screen shot">
